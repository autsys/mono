{
  "name": "@autsys/firebase",
  "version": "0.0.4",
  "description": "Commonly used Firebase functionality",
  "scripts": {
    "build": "run-s build:*",
    "build:clean": "rimraf dist",
    "build:copy": "cpx package.json dist",
    "build:main": "tsc -p tsconfig.json",
    "build:pkg": "cd dist && npm pack",
    "ci:build": "tsc && cpx \"{package.json,.npmignore}\" dist",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "test:unit": "nyc --silent ava",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "nyc --silent ava --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/autsys/mono.git"
  },
  "keywords": ["firebase"],
  "author": "jheyer159",
  "license": "ISC",
  "dependencies": {
    "whatwg-url": "^8.5.0"
  },
  "devDependencies": {
    "@types/whatwg-url": "^8.2.0"
  },
  "peerDependencies": {
    "firebase": "^8.4.3"
  }
}
